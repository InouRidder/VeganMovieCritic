<div class="container">
  <div class="row">

    <div class="col-sm-6 col-xs-12">
      <div class="portfoliocard ">
        <div class="coverphoto"></div>
        <div class="left_col">
          <div class="followers">
            <h4>
              Reviews:
            </h4>
            <div class="follow_count"><%= @profile.user.reviews.size %></div>
            Written
          </div>
          <div class="following">
            <div class="follow_count"><%= @profile.user.review_ratings.size %></div>
            Reviewed
          </div>
        </div>
        <div class="right_col">
          <h2 class="name"><%= @profile.username %></h2>
          <br><br>
          <h3 class="location"><%=  @profile.country.capitalize  %> </h3>
          <ul class="contact_information">
            <li class="work">Vegan Critic</li>
            <li class="website"><%= @profile.info  %></li>
            <li class="info"> <%= @profile.first_name + " " + @profile.last_name%> </li>
          </ul>
        </div>
      </div>
    </div>

    <div class="col-sm-6 col-xs-12">
      <div class="profile-scrollbox">
        <% @profile.user.reviews.each do |review| %>
        <div class="recent-activity">
          <div class="product">
            <div class='product-body'>
              <h3>
                <%= review.movie.title %>
              </h3>
              <p>
                <%= review.title %> @ <%= review.created_at.strftime('%A, %d %b %Y %l:%M %p') %> has been rated <%= review.review_ratings.size %> times!
                <%= review.review_rating ? review.review_rating : 'Not rated yet' %> <div class='fa fa-star'></div>
              </p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
