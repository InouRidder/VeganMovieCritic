<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2 col-sm-3 col-sm-offset-4">
      <h2>Log in</h2>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false, label: 'Favorite film' %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="row">
      <div class="form-inputs col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4">

        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
