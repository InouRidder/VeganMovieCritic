  <h3 class="text-center">
    We've found <%= @movies.size %> result<% @movies.size >= 1 ? "s" : ""  %> matching your query!
  </h3>
</div>
<div class="container">
<div class="results">
 <div class="row">
   <% @movies.each do |movie| %>
   <div class="col-xs-12 col-sm-6">
    <div class="card">
      <div class="text-center">
        <h3>
          <%= movie.title %>
        </h3>
        <p>
        </p>
        <div class="card-content">
          <p>
            <%= movie.plot%>
          </p>
          <br>
          Rating: <%= movie.rating %>
          <br>
          <%= movie.created_at.strftime('%A, %d %b %Y %l:%M %p') %>
        </div>
        <div class="card-btns">
          <%= link_to "Checkout reviews", movie_path(movie), class: "btn vegan-btn" %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>
