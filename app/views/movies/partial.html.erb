<div class="container">
  <div class="row">
    <div class="col-xs-6">

      <% if @review.present? %>

      <div class= "card card-outline-primary mb-3 text-center">
        <div class= "card-header">
          <h3>
            <%= @review.title %>
          </h3>
        </div>
        <div class="card-block">
          <div class="card-text">
            <blockquote class="card-blockquote">
              <p>
                <%=raw @review.content %>
              </p>
              <footer>
                <cite>
                  rating: <%= @review.rating %>
                  <%= @review.created_at.strftime('%A, %d %b %Y %l:%M %p') %>
                </cite>
              </footer>
            </blockquote>
          </div>
        </div>

        <div class="card-rating">
          <%= render 'shared/star-rating' %>
        </div>

        <div class="card-btns">
          <% if policy(@review).update? %>
          <%= link_to 'Edit Review', edit_movie_review_path(@movie, @review), class: "btn vegan-btn"  %>
          <% end %>
          <% if policy(@review).destroy? %>
          <%= link_to 'Delete', movie_review_path(@movie, @review), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn vegan-btn" %>
          <% end %>
          <%= link_to 'More Reviews', movie_path(@movie), class: "btn vegan-btn" %>
        </div>
      </div>
    </div>

    <div class="col-xs-3">
      <div class="movie-info">
        <div class="movie-title">
          <h1>
            <%= @movie.title  %>
          </h1>
          <p>
            users rating: <%= @movie.user_rating %>
          </p>
        </div>

        <div class="movie-info-box">
          <%= @movie.plot  %>
          <br>
          <div class="movie-poster">
            <%= image_tag "#{@movie.poster}", class: "movie-poster"  %>
          </div>
        </div>
      </div>
    </div>

    <% else %>

    <p style="padding: 100px;">
      No reviews yet! <br>
      Be the first to leave one <%= link_to 'Leave a review', new_movie_review_path(@movie), class: "btn vegan-btn"  %>
    </p>
    <% end %>
  </div>
</div>
