<%= render 'shared/archivenavbar'  %>

<div class="container">
  <div class="row">

    <div class="visible-xs-block xs-12">
      <div class="scrollbox-small">
        <div class="list">
          <% @most_reviewed.each do |movie| %>
            <div class="list-item">
              <%= link_to "#{movie.title}", movie_path(movie) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-sm-3 hidden-xs">
      <div class="scrollbox">
        <div class="list">
          <% @most_reviewed.each do |movie| %>
            <div class="list-item">
              <%= link_to "#{movie.title}", movie_path(movie), class: "click-btn" %>
            </div>
          <% end %>
       </div>
      </div>
    </div>

    <div class="col-xs-6 hidden-xs">
      <div class="review-index">
        <div class="content-review-index">
        </div>
      </div>
    </div>

  </div>
</div>
