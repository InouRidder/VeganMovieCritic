<div class="container">
  <div class="row">

    <div class="visible-xs-block xs-12">
    <div class="scrollbox-small">
      <div class="list">
        <% @movies.each_with_index do |movie, i| %>
          <%= link_to "#{i + 1}. #{movie.title}", movie_path(movie), class: "list-item" %>
        <% end %>
      </div>
     </div>
   </div>

    <div class="col-sm-3 hidden-xs">
      <div class="scrollbox">
        <div class="list">
          <% @movies.each_with_index do |movie, i| %>
           <%= link_to "#{i + 1}. #{movie.title}", movie_path(movie), class: "click-btn list-item" %>
         <% end %>
       </div>
     </div>
   </div>

    <div class="col-xs-6 hidden-xs">
      <div class="review-index">
        <div class="content-review-index">
        </div>
      </div>
    </div>
  </div>
</div>
