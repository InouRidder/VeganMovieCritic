<h1 id="movie-title">
  <%= @review.title %>
</h1>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3>
        <%= @review.title %>
      </h3>
      <p>
        <%= @review.content %>
      </p>
      Rating:<%= @review.rating  %>
      <% if policy(Review).update? %>
        <%= link_to 'Edit Review', edit_movie_review_path(@movie, review), class: "btn btn-primary"  %>
        <% end %>
        <% if policy(Review).destroy? %>
        <%= link_to 'Delete', review_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>

