
<div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-5 text-right hidden-xs">
        <%= image_tag "#{@review.movie.poster}", class: "poster-info-box-revshow "  %>
      </div>
      <div class="col-xs-12 col-sm-5">
        <div class="card-info-revshow text-left">
          <h3>
            Title:  <%= @review.title %>,
          </h3>
          Rating: <%= @review.rating %>
          <p>
            By: <%= @review.user.username   %>
            <br>
            On: <%= @review.created_at %>
          </p>

        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 text-center">

        <div class="card-content-revshow">
            <%=raw @review.content %>

        </div>

        <div class="card-rating">

          <% if @review.has_rated.include?(@user) %>
          review rating: <%= @review.set_rating / 2 %>
          <% end %>
        </div>
        <div class="col-xs-12">
          <div class="card-btns center-block">
            <% if policy(@review).update? %>
            <%= link_to 'Edit Review', edit_movie_review_path(@review.movie, @review), class: "btn vegan-btn"  %>
            <% end %>
            <% if policy(@review).destroy? %>
            <%= link_to 'Delete', movie_review_path(@review.movie, @review), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn vegan-btn" %>
            <% end %>
            <%= link_to 'More Reviews', movie_path(@review.movie), class: "btn vegan-btn"  %>
          </div>
        </div>
      </div>
    </div>
  </div>
