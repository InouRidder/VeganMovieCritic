<%= simple_form_for [@movie, @review, @review_rating], input_html: { class: 'stars-submit' }, remote: true do %>
  <fieldset class="rating">
    <input class="star-rating review-rater" type="radio" id="star5" name="review_rating[rating]" value="10" hidden-value= "<%= @user.id %>" />
    <label class ="full review-rater" for="star5" title="Awesome - 5 stars" hidden-value="<%= @user.id  %>">
    </label>
    <input class="star-rating review-rater" type="radio" id="star4half" name="review_rating[rating]" value="9" hidden-value= "<%= @user.id  %>"/>
    <label class="half review-rater" for="star4half" title="Pretty good - 4.5 stars" hidden-value= "<%= @user.id  %>">
    </label>
    <input class="star-rating review-rater" type="radio" id="star4" name="review_rating[rating]" value="8" hidden-value= "<%= @user.id  %>"/>
    <label class = "full review-rater" for="star4" title="Pretty good - 4 stars" hidden-value= "<%= @user.id  %>">
    </label>
    <input class="star-rating review-rater" type="radio" id="star3half" name="review_rating[rating]" value="7" hidden-value= "<%= @user.id %>"/>
    <label class="half review-rater" for="star3half" title="Meh - 3.5 stars" hidden-value= "<%= @user.id %>">
    </label>
    <input class="star-rating review-rater" type="radio" id="star3" name="review_rating[rating]" value="6" hidden-value= "<%= @user.id %>" />
    <label class = "full review-rater" for="star3" title="Meh - 3 stars" hidden-value= "<%= @user.id %>">
    </label>
    <input class="star-rating review-rater" type="radio" id="star2half" name="review_rating[rating]" value="5" hidden-value= "<%= @user.id %>"/>
    <label class="half review-rater" for="star2half" title="Kinda bad - 2.5 stars" hidden-value= "<%= @user.id %>">
    </label>
    <input class="star-rating review-rater" type="radio" id="star2" name="review_rating[rating]" value="4" hidden-value= "<%= @user.id %>" />
    <label class = "full review-rater" for="star2" title="Kinda bad - 2 stars" hidden-value= "<%= @user.id %>">
    </label>
    <input class="star-rating review-rater" type="radio" id="star1half" name="review_rating[rating]" value="3" hidden-value= "<%= @user.id %>"/>
    <label class="half review-rater" for="star1half" title="Meh - 1.5 stars" hidden-value= "<%= @user.id %>">
    </label>
    <input class="star-rating review-rater" type="radio" id="star1" name="review_rating[rating]" value="2" hidden-value= "<%= @user.id %>"/>
    <label class = "full review-rater" for="star1" title="Sucks big time - 1 star" hidden-value= "<%= @user.id %>">
    </label>
    <input class="star-rating review-rater" type="radio" id="starhalf" name="review_rating[rating]" value="1" hidden-value= "<%= @user.id %>"/>
    <label class="half review-rater" for="starhalf" title="Sucks big time - 0.5 stars" hidden-value= "<%= @user.id %>">
    </label>
  </fieldset>
<% end %>
