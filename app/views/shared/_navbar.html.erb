<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path class: "vmr-logo" do %>
  <div class="vmr-logo">
    <h4>
      Vegan Movie Critic
    </h4>
  </div>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">


    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

    <!-- Notification -->
    <%= link_to "/admin", class: "navbar-wagon-item navbar-wagon-link" do %>
    <div class="badge-container">
      <i class="fa fa-lock"></i>
      <div class="badge badge-blue"></div>
    </div>
    <% end %>

    <!-- Profile picture and dropdown -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to "#" do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to "/admin" do %>
            <i class="fa fa-lock"></i>
            <% end %>
          </li>

          <li>
            <%= link_to "#" do %>
            <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>

    <% else %>

    <!-- Login text link -->
    <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
    <%= link_to t(".top_call_to_action", default: "Archives"), movies_path, class: "navbar-wagon-item navbar-wagon-button btn" %>

    <% if current_user.admin %>
    <%= link_to t(".top_call_to_action", default: "Pending #{Review.where(approved: false).size}"), movies_pending_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
    <% end %>

    <%= link_to t(".top_call_to_action", default: "Whats New?"), movies_newest_path, class: "navbar-wagon-item navbar-wagon-button btn" %>

    <%= link_to t(".top_call_to_action", default: "Rating"), movies_highrated_path, class: "navbar-wagon-item navbar-wagon-button btn" %>

    <!-- Button (call-to-action) -->
    <%= link_to t(".top_call_to_action", default: "Add a Review"), new_movie_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
  </div>

  <!-- Search form -->
  <form action="" class="navbar-wagon-search">
    <input type="text" class="navbar-wagon-search-input" placeholder="Search something">
    <button type="submit" class="navbar-wagon-search-btn">
      <i class="fa fa-search"></i>
    </button>
  </form>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="/movies/pending">Pending</a></li>
        <li><a href="/movies/rated">Rated</a></li>
        <li><a href="/movies/archives">Archive</a></li>
        <li><a href="/movies/newest"> Newest</a></li>
        <li><a href="/movies/new"> Add A Review! </a></li>
        <li><a href="/admin"> Admin Panel</a></li>
      </ul>
    </div>
  </div>
</div>

